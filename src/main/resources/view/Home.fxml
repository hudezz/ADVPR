<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ADVPR.HomeController"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <Label text="Swineberg ChatBot Dashboard" layoutX="180.0" layoutY="50.0"
               style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <Button text="Start Chat" layoutX="250.0" layoutY="120.0"
                prefWidth="100.0" onAction="#handleStartChat"/>

        <Button text="Re-Index PDF" fx:id="uploadButton" layoutX="250.0" layoutY="170.0"
                prefWidth="100.0" onAction="#handleUpload"/>
    </children>
</AnchorPane>